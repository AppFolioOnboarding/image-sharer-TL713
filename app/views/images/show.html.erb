<div>
  <strong>Title:</strong>
  <p class="js-image-title"><%= @image.title %></p>
</div>

<div>
  <strong>Link:</strong>
  <%= @image.link %>
</div>

<div>
  <strong>Tags:</strong>
  <span class="js-tag-list"><%= @image.tag_list %></span>
</div>

<div>
  <%= image_tag(@image.link) %>
</div>
  <%= link_to 'Delete', image_path(@image), method: :delete, data: {confirm: 'Do you want to delete this image?'}, class: 'js-delete-link' %>
</div>
<%= link_to 'Image Index Page', root_path, class: 'js-index-page-link'%>
